{
  "name": "locallytrip-backend",
  "version": "1.0.0",
  "description": "LocallyTrip.com Backend API",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm ci --only=production",
    "postinstall": "echo 'Migration disabled for setup script'",
    "migrate:prod": "NODE_ENV=production npx sequelize-cli db:migrate",
    "seed:prod": "NODE_ENV=production npx sequelize-cli db:seed:all",
    "test": "jest",
    "lint": "echo 'No linting configured'",
    "health": "curl -f http://localhost:3001/health || exit 1"
  },
  "keywords": [
    "nodejs",
    "express",
    "api",
    "travel",
    "tourism"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mailersend": "^2.6.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.4",
    "sequelize-cli": "^6.6.2",
    "ua-parser-js": "^2.0.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.7"
  }
}
