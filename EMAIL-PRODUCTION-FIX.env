# Production Email Configuration - Working Port 2525
# Add these to .env on production server

# Maileroo SMTP with working port 2525 (tested working)
EMAIL_SERVICE=maileroo
EMAIL_HOST=smtp.maileroo.com
EMAIL_PORT=2525
EMAIL_SECURE=false
EMAIL_TLS=true

# Relaxed SSL/TLS settings for production server
EMAIL_IGNORE_TLS=false
EMAIL_REQUIRE_TLS=false
EMAIL_REJECT_UNAUTHORIZED=false

# Alternative: Try different ports
# EMAIL_PORT=2525  # Alternative Maileroo port
# EMAIL_PORT=25    # Standard SMTP port

# Maileroo API Key (backup method)
MAILEROO_API_KEY=21813567890e9532d3ae718b28930b6066a75abe3da7bbf34d66474595be38bb

# Email timeout settings
EMAIL_CONNECTION_TIMEOUT=10000
EMAIL_SOCKET_TIMEOUT=10000

# Email debug for troubleshooting
EMAIL_DEBUG_MODE=true
